<!-- Full-width layout with side banners -->
<div class="container-fluid px-0">
  <div class="row g-0">
    <!-- Left Ad Banner (columns 1-2) -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-end position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>

    <!-- Main Content (columns 3-10) -->
    <div class="col-lg-8 py-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-10">
            <div class="mb-4">
              <h1 class="h2 mb-3"><%= t("pages.user_guide.title") %></h1>
              <p class="text-muted lead"><%= t("pages.user_guide.subtitle") %></p>
            </div>

            <!-- User Guide Sections -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <div class="mb-4">
                  <p class="mb-0 fs-5"><%= t("pages.user_guide.intro") %></p>
                </div>

                <!-- Section 1: Basics -->
                <div class="border-start border-success border-3 ps-4 mb-4">
                  <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-success me-2"><%= t("pages.user_guide.sections.basics.badge") %></span>
                    <h3 class="h5 mb-0"><%= t("pages.user_guide.sections.basics.title") %></h3>
                  </div>
                  <p class="mb-3"><%= t("pages.user_guide.sections.basics.description") %></p>
                  
                  <div class="mb-3">
                    <h4 class="h5 fw-semibold mb-2">What is a Tool?</h4>
                    <p class="mb-0"><%= t("pages.user_guide.sections.basics.tool_explanation") %></p>
                  </div>
                  
                  <div class="mb-3">
                    <h4 class="h5 fw-semibold mb-2">What is a Submission?</h4>
                    <p class="mb-0"><%= t("pages.user_guide.sections.basics.submission_explanation") %></p>
                  </div>
                  
                  <!-- Types of Submissions - Full Width Container -->
                  <div class="mb-4">
                    <h4 class="h5 fw-semibold mb-2"><%= t("pages.user_guide.sections.basics.submission_types_title") %></h4>
                    <p class="mb-2"><%= t("pages.user_guide.sections.basics.submission_types_description") %></p>
                    <div class="row">
                      <div class="col-12 col-md-6">
                        <ul class="list-unstyled">
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_article") %></span>
                            <%= t("pages.user_guide.sections.basics.type_article") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_guide") %></span>
                            <%= t("pages.user_guide.sections.basics.type_guide") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_documentation") %></span>
                            <%= t("pages.user_guide.sections.basics.type_documentation") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_github_repo") %></span>
                            <%= t("pages.user_guide.sections.basics.type_github_repo") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_social_post") %></span>
                            <%= t("pages.user_guide.sections.basics.type_social_post") %>
                          </li>
                        </ul>
                      </div>
                      <div class="col-12 col-md-6">
                        <ul class="list-unstyled">
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_code_snippet") %></span>
                            <%= t("pages.user_guide.sections.basics.type_code_snippet") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_website") %></span>
                            <%= t("pages.user_guide.sections.basics.type_website") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_video") %></span>
                            <%= t("pages.user_guide.sections.basics.type_video") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_podcast") %></span>
                            <%= t("pages.user_guide.sections.basics.type_podcast") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.basics.bullet_other") %></span>
                            <%= t("pages.user_guide.sections.basics.type_other") %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Tag Colors & Meaning - Full Width Container -->
                  <div>
                    <h4 class="h5 fw-semibold mb-2"><%= t("pages.user_guide.sections.basics.tag_colors_title") %></h4>
                    <ul class="list-unstyled">
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_yellow_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_yellow_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_yellow_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_black_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_black_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_black_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_grey_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_grey_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_grey_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_green_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_green_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_green_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_indigo_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_indigo_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_indigo_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_navy_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_navy_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_navy_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_purple_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_purple_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_purple_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_cyan_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_cyan_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_cyan_description") %></span>
                      </li>
                      <li class="mb-2">
                        <span class="d-inline-block" style="width: 100px;"><%= t("pages.user_guide.sections.basics.tag_colors_blue_label") %></span>
                        <span class="fw-bold fs-6"><%= t("pages.user_guide.sections.basics.tag_colors_blue_category") %></span>
                        <span> — </span>
                        <span class="small"><%= t("pages.user_guide.sections.basics.tag_colors_blue_description") %></span>
                      </li>
                    </ul>
                    <div class="mt-3">
                      <h5 class="h6 fw-semibold mb-2"><%= t("pages.user_guide.sections.basics.tag_colors_level_title") %></h5>
                      <ul class="list-unstyled">
                        <li class="mb-2">
                          <span class="me-2"><%= t("pages.user_guide.sections.basics.tag_colors_level_beginner_label") %></span>
                        </li>
                        <li class="mb-2">
                          <span class="me-2"><%= t("pages.user_guide.sections.basics.tag_colors_level_intermediate_label") %></span>
                        </li>
                        <li class="mb-2">
                          <span class="me-2"><%= t("pages.user_guide.sections.basics.tag_colors_level_advanced_label") %></span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>

                <!-- Section 2, 3 & 4: Getting Started, Discovery and Community -->
                <div class="mt-5 pt-4 border-top">
                  <div class="row g-4">
                    <!-- Getting Started - Left aligned -->
                    <div class="col-12 mb-4">
                      <div class="border-start border-primary border-3 ps-4">
                        <div class="d-flex align-items-center mb-2">
                          <span class="badge bg-primary me-2"><%= t("pages.user_guide.sections.getting_started.badge") %></span>
                          <h3 class="h5 mb-0"><%= t("pages.user_guide.sections.getting_started.title") %></h3>
                        </div>
                        <p class="mb-3"><%= t("pages.user_guide.sections.getting_started.description") %></p>
                        <ul class="list-unstyled">
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.getting_started.bullet_1") %></span>
                            <%= t("pages.user_guide.sections.getting_started.item_1") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.getting_started.bullet_2") %></span>
                            <%= t("pages.user_guide.sections.getting_started.item_2") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.getting_started.bullet_3") %></span>
                            <%= t("pages.user_guide.sections.getting_started.item_3") %>
                          </li>
                        </ul>
                      </div>
                    </div>

                    <!-- Discovery and Community (Side by Side) -->
                    <div class="col-12 col-md-6">
                      <div class="border-start border-info border-3 ps-4 h-100">
                        <div class="d-flex align-items-center mb-2">
                          <span class="badge bg-info me-2"><%= t("pages.user_guide.sections.discovery.badge") %></span>
                          <h3 class="h5 mb-0"><%= t("pages.user_guide.sections.discovery.title") %></h3>
                        </div>
                        <p class="mb-3"><%= t("pages.user_guide.sections.discovery.description") %></p>
                        <ul class="list-unstyled">
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.discovery.bullet_1") %></span>
                            <%= t("pages.user_guide.sections.discovery.item_1") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.discovery.bullet_2") %></span>
                            <%= t("pages.user_guide.sections.discovery.item_2") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.discovery.bullet_3") %></span>
                            <%= t("pages.user_guide.sections.discovery.item_3") %>
                          </li>
                        </ul>
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="border-start border-3 ps-4 h-100" style="border-color: #ff69b4 !important;">
                        <div class="d-flex align-items-center mb-2">
                          <span class="badge me-2" style="background-color: #ff69b4;"><%= t("pages.user_guide.sections.community.badge") %></span>
                          <h3 class="h5 mb-0"><%= t("pages.user_guide.sections.community.title") %></h3>
                        </div>
                        <p class="mb-3"><%= t("pages.user_guide.sections.community.description") %></p>
                        <ul class="list-unstyled">
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.community.bullet_1") %></span>
                            <%= t("pages.user_guide.sections.community.item_1") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.community.bullet_2") %></span>
                            <%= t("pages.user_guide.sections.community.item_2") %>
                          </li>
                          <li class="mb-2">
                            <span class="me-2"><%= t("pages.user_guide.sections.community.bullet_3") %></span>
                            <%= t("pages.user_guide.sections.community.item_3") %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Hierarchy Visualization -->
                <div class="mt-5 pt-4 border-top">
                  <h4 class="h5 fw-semibold mb-3"><%= t("pages.user_guide.sections.hierarchy.title") %></h4>
                  <p class="text-muted mb-4"><%= t("pages.user_guide.sections.hierarchy.description") %></p>
                  
                  <div class="hierarchy-container position-relative">
                    <!-- Tool Level (Top) -->
                    <div class="d-flex justify-content-center mb-3">
                      <div class="card shadow-sm border border-dark bg-light" style="max-width: 320px; width: 100%;">
                        <div class="card-body text-center py-3">
                          <div class="mb-2">
                            <i class="bi bi-tools fs-1 text-primary"></i>
                          </div>
                          <h5 class="card-title fw-bold mb-2"><%= t("pages.user_guide.sections.hierarchy.tool_label") %></h5>
                          <p class="card-text small mb-0"><%= t("pages.user_guide.sections.hierarchy.tool_description") %></p>
                        </div>
                      </div>
                    </div>

                    <!-- Vertical Connection Line from Tool to Submission -->
                    <div class="d-flex justify-content-center mb-3">
                      <div style="width: 2px; height: 50px; background-color: #dee2e6;"></div>
                    </div>

                    <!-- Submissions Level (Middle) -->
                    <div class="d-flex justify-content-center mb-3">
                      <div class="card shadow-sm border border-dark bg-light" style="max-width: 320px; width: 100%;">
                        <div class="card-body text-center py-3">
                          <div class="mb-2">
                            <i class="bi bi-file-earmark-text fs-1 text-info"></i>
                          </div>
                          <h5 class="card-title fw-bold mb-2"><%= t("pages.user_guide.sections.hierarchy.submission_label") %></h5>
                          <p class="card-text small mb-0"><%= t("pages.user_guide.sections.hierarchy.submission_description") %></p>
                        </div>
                      </div>
                    </div>

                    <!-- Connection Lines to Discussion and Interactions (Branches) -->
                    <div class="d-flex justify-content-center mb-3 position-relative" style="height: 60px;">
                      <div class="position-absolute" style="left: 50%; top: 0; transform: translateX(-50%); width: 2px; height: 100%; background-color: #dee2e6;"></div>
                      <div class="position-absolute" style="left: 50%; top: 0; transform: translateX(-50%) translateX(-120px); width: 120px; height: 2px; background-color: #dee2e6;"></div>
                      <div class="position-absolute" style="left: 50%; top: 0; transform: translateX(-50%) translateX(120px); width: 120px; height: 2px; background-color: #dee2e6;"></div>
                      <div class="position-absolute" style="left: 50%; top: 60px; transform: translateX(-50%) translateX(-120px); width: 2px; height: 30px; background-color: #dee2e6;"></div>
                      <div class="position-absolute" style="left: 50%; top: 60px; transform: translateX(-50%) translateX(120px); width: 2px; height: 30px; background-color: #dee2e6;"></div>
                    </div>

                    <!-- Discussion and Interactions Level (Bottom) -->
                    <div class="row g-3 justify-content-center">
                      <div class="col-12 col-md-6 col-lg-5">
                        <div class="card shadow-sm border border-dark h-100 bg-light">
                          <div class="card-body text-center py-3">
                            <div class="mb-2">
                              <i class="bi bi-chat-dots fs-1 text-success"></i>
                            </div>
                            <h6 class="card-title fw-bold mb-2"><%= t("pages.user_guide.sections.hierarchy.discussion_label") %></h6>
                            <p class="card-text small mb-0"><%= t("pages.user_guide.sections.hierarchy.discussion_description") %></p>
                          </div>
                        </div>
                      </div>
                      <div class="col-12 col-md-6 col-lg-5">
                        <div class="card shadow-sm border border-dark h-100 bg-light">
                          <div class="card-body text-center py-3">
                            <div class="mb-2">
                              <i class="bi bi-hand-thumbs-up fs-1 text-warning"></i>
                            </div>
                            <h6 class="card-title fw-bold mb-2"><%= t("pages.user_guide.sections.hierarchy.interactions_label") %></h6>
                            <p class="card-text small mb-0"><%= t("pages.user_guide.sections.hierarchy.interactions_description") %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Ad Banner (columns 11-12) -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-start position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1550751827-4bd374c3f58b?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
