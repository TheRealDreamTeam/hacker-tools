<!-- Full-width layout with side banners -->
<div class="container-fluid px-0">
  <div class="row g-0">
    <!-- Left Ad Banner (columns 1-2) -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-end position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>

    <!-- Main Content (columns 3-10) -->
    <div class="col-lg-8 py-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-10">
            <div class="mb-4">
              <h1 class="h2 mb-3"><%= t("pages.about_us.title") %></h1>
              <p class="text-muted lead"><%= t("pages.about_us.subtitle") %></p>
            </div>

            <!-- Mission Section -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h2 class="h4 mb-3"><%= t("pages.about_us.mission.title") %></h2>
                <p class="text-muted mb-0"><%= t("pages.about_us.mission.content") %></p>
              </div>
            </div>

            <!-- What We Do Section -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h2 class="h4 mb-3"><%= t("pages.about_us.what_we_do.title") %></h2>
                <div class="row g-3">
                  <div class="col-12 col-md-4">
                    <div class="text-center">
                      <i class="bi bi-search-heart fs-1 text-primary mb-3"></i>
                      <h3 class="h6 mb-2"><%= t("pages.about_us.what_we_do.feature_1.title") %></h3>
                      <p class="text-muted small mb-0"><%= t("pages.about_us.what_we_do.feature_1.description") %></p>
                    </div>
                  </div>
                  <div class="col-12 col-md-4">
                    <div class="text-center">
                      <i class="bi bi-people fs-1 text-primary mb-3"></i>
                      <h3 class="h6 mb-2"><%= t("pages.about_us.what_we_do.feature_2.title") %></h3>
                      <p class="text-muted small mb-0"><%= t("pages.about_us.what_we_do.feature_2.description") %></p>
                    </div>
                  </div>
                  <div class="col-12 col-md-4">
                    <div class="text-center">
                      <i class="bi bi-lightning-charge fs-1 text-primary mb-3"></i>
                      <h3 class="h6 mb-2"><%= t("pages.about_us.what_we_do.feature_3.title") %></h3>
                      <p class="text-muted small mb-0"><%= t("pages.about_us.what_we_do.feature_3.description") %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Values Section -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h2 class="h4 mb-3"><%= t("pages.about_us.values.title") %></h2>
                <div class="row g-3">
                  <div class="col-12 col-md-6">
                    <h3 class="h6 mb-2">
                      <i class="bi bi-heart-fill text-danger me-2"></i>
                      <%= t("pages.about_us.values.value_1.title") %>
                    </h3>
                    <p class="text-muted small mb-0"><%= t("pages.about_us.values.value_1.description") %></p>
                  </div>
                  <div class="col-12 col-md-6">
                    <h3 class="h6 mb-2">
                      <i class="bi bi-shield-check text-success me-2"></i>
                      <%= t("pages.about_us.values.value_2.title") %>
                    </h3>
                    <p class="text-muted small mb-0"><%= t("pages.about_us.values.value_2.description") %></p>
                  </div>
                  <div class="col-12 col-md-6">
                    <h3 class="h6 mb-2">
                      <i class="bi bi-graph-up-arrow text-info me-2"></i>
                      <%= t("pages.about_us.values.value_3.title") %>
                    </h3>
                    <p class="text-muted small mb-0"><%= t("pages.about_us.values.value_3.description") %></p>
                  </div>
                  <div class="col-12 col-md-6">
                    <h3 class="h6 mb-2">
                      <i class="bi bi-globe text-primary me-2"></i>
                      <%= t("pages.about_us.values.value_4.title") %>
                    </h3>
                    <p class="text-muted small mb-0"><%= t("pages.about_us.values.value_4.description") %></p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Section -->
            <div class="card shadow-sm">
              <div class="card-body">
                <h2 class="h4 mb-3"><%= t("pages.about_us.contact.title") %></h2>
                <p class="text-muted mb-0"><%= t("pages.about_us.contact.message") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Ad Banner (columns 11-12) -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-start position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1550751827-4bd374c3f58b?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
