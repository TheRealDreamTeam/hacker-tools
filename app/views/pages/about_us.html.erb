<!-- Full-width layout -->
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="mb-4">
        <h1 class="h2 mb-3"><%= t("pages.about_us.title") %></h1>
        <p class="text-muted lead"><%= t("pages.about_us.subtitle") %></p>
      </div>

      <!-- Mission Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="h4 mb-3"><%= t("pages.about_us.mission.title") %></h2>
          <p class="text-muted mb-0"><%= t("pages.about_us.mission.content") %></p>
        </div>
      </div>

      <!-- What We Do Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="h4 mb-3"><%= t("pages.about_us.what_we_do.title") %></h2>
          <div class="row g-3">
            <div class="col-12 col-md-4">
              <div class="text-center">
                <i class="bi bi-search-heart fs-1 text-primary mb-3"></i>
                <h3 class="h5 mb-2"><%= t("pages.about_us.what_we_do.feature_1.title") %></h3>
                <p class="text-muted mb-0"><%= t("pages.about_us.what_we_do.feature_1.description") %></p>
              </div>
            </div>
            <div class="col-12 col-md-4">
              <div class="text-center">
                <i class="bi bi-people fs-1 text-primary mb-3"></i>
                <h3 class="h5 mb-2"><%= t("pages.about_us.what_we_do.feature_2.title") %></h3>
                <p class="text-muted mb-0"><%= t("pages.about_us.what_we_do.feature_2.description") %></p>
              </div>
            </div>
            <div class="col-12 col-md-4">
              <div class="text-center">
                <i class="bi bi-lightning-charge fs-1 text-primary mb-3"></i>
                <h3 class="h5 mb-2"><%= t("pages.about_us.what_we_do.feature_3.title") %></h3>
                <p class="text-muted mb-0"><%= t("pages.about_us.what_we_do.feature_3.description") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Values Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="h4 mb-3"><%= t("pages.about_us.values.title") %></h2>
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <h3 class="h5 mb-2">
                <i class="bi bi-heart-fill text-danger me-2"></i>
                <%= t("pages.about_us.values.value_1.title") %>
              </h3>
              <p class="text-muted mb-0"><%= t("pages.about_us.values.value_1.description") %></p>
            </div>
            <div class="col-12 col-md-6">
              <h3 class="h5 mb-2">
                <i class="bi bi-shield-check text-success me-2"></i>
                <%= t("pages.about_us.values.value_2.title") %>
              </h3>
              <p class="text-muted mb-0"><%= t("pages.about_us.values.value_2.description") %></p>
            </div>
            <div class="col-12 col-md-6">
              <h3 class="h5 mb-2">
                <i class="bi bi-graph-up-arrow text-info me-2"></i>
                <%= t("pages.about_us.values.value_3.title") %>
              </h3>
              <p class="text-muted mb-0"><%= t("pages.about_us.values.value_3.description") %></p>
            </div>
            <div class="col-12 col-md-6">
              <h3 class="h5 mb-2">
                <i class="bi bi-globe text-primary me-2"></i>
                <%= t("pages.about_us.values.value_4.title") %>
              </h3>
              <p class="text-muted mb-0"><%= t("pages.about_us.values.value_4.description") %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Learn More Section -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="h4 mb-3"><%= t("pages.about_us.learn_more.title") %></h2>
          <p class="text-muted mb-0"><%= t("pages.about_us.learn_more.message") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
