<!-- Welcome to HackerTools Blog Post -->
<div class="card shadow-sm mb-4 border-primary border-2">
  <div class="card-body">
    <div class="mb-4">
      <div class="d-flex align-items-center justify-content-between mb-2">
        <h2 class="h3 mb-0"><%= t("pages.newest_articles.welcome_post.title") %></h2>
        <span class="badge bg-primary"><%= l(Date.current, format: "%B %Y") %></span>
      </div>
    </div>
    
    <div class="article-content">
      <%= simple_format(t("pages.newest_articles.welcome_post.content"), {}, wrapper_tag: "p") %>
    </div>
  </div>
</div>
