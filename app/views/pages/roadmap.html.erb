<!-- Full-width layout with side banners -->
<div class="container-fluid px-0">
  <div class="row g-0">
    <!-- Left Ad Banner (columns 1-2) -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-end position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>

    <!-- Main Content (columns 3-10) -->
    <div class="col-lg-8 py-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-10">
            <div class="mb-4">
              <h1 class="h2 mb-3"><%= t("pages.roadmap.title") %></h1>
              <p class="text-muted lead"><%= t("pages.roadmap.subtitle") %></p>
            </div>

            <!-- Roadmap Timeline -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <div class="mb-4">
                  <p class="text-muted mb-0"><%= t("pages.roadmap.intro") %></p>
                </div>

                <!-- Phase 1: Current -->
                <div class="border-start border-primary border-3 ps-4 mb-4">
                  <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-primary me-2"><%= t("pages.roadmap.phases.current.badge") %></span>
                    <h3 class="h5 mb-0"><%= t("pages.roadmap.phases.current.title") %></h3>
                  </div>
                  <p class="text-muted mb-3"><%= t("pages.roadmap.phases.current.description") %></p>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-check-circle-fill text-success me-2"></i>
                      <%= t("pages.roadmap.phases.current.item_1") %>
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check-circle-fill text-success me-2"></i>
                      <%= t("pages.roadmap.phases.current.item_2") %>
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check-circle-fill text-success me-2"></i>
                      <%= t("pages.roadmap.phases.current.item_3") %>
                    </li>
                  </ul>
                </div>

                <!-- Phase 2: Upcoming -->
                <div class="border-start border-info border-3 ps-4 mb-4">
                  <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-info me-2"><%= t("pages.roadmap.phases.upcoming.badge") %></span>
                    <h3 class="h5 mb-0"><%= t("pages.roadmap.phases.upcoming.title") %></h3>
                  </div>
                  <p class="text-muted mb-3"><%= t("pages.roadmap.phases.upcoming.description") %></p>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-circle text-info me-2"></i>
                      <%= t("pages.roadmap.phases.upcoming.item_1") %>
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-circle text-info me-2"></i>
                      <%= t("pages.roadmap.phases.upcoming.item_2") %>
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-circle text-info me-2"></i>
                      <%= t("pages.roadmap.phases.upcoming.item_3") %>
                    </li>
                  </ul>
                </div>

                <!-- Phase 3: Future -->
                <div class="border-start border-secondary border-3 ps-4">
                  <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-secondary me-2"><%= t("pages.roadmap.phases.future.badge") %></span>
                    <h3 class="h5 mb-0"><%= t("pages.roadmap.phases.future.title") %></h3>
                  </div>
                  <p class="text-muted mb-3"><%= t("pages.roadmap.phases.future.description") %></p>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-circle text-secondary me-2"></i>
                      <%= t("pages.roadmap.phases.future.item_1") %>
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-circle text-secondary me-2"></i>
                      <%= t("pages.roadmap.phases.future.item_2") %>
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-circle text-secondary me-2"></i>
                      <%= t("pages.roadmap.phases.future.item_3") %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Feedback Section -->
            <div class="card shadow-sm">
              <div class="card-body">
                <h3 class="h5 mb-3"><%= t("pages.roadmap.feedback.title") %></h3>
                <p class="text-muted mb-0"><%= t("pages.roadmap.feedback.message") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Ad Banner (columns 11-12) -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-start position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1550751827-4bd374c3f58b?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
