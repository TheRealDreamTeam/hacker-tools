<%= simple_form_for(@tool, html: { multipart: true }) do |f| %>
  <%# Removed f.error_notification - using flash messages instead for better UX %>

  <div class="row g-3">
    <div class="col-12">
      <%= f.input :tool_name, label: t("tools.form.tool_name"), required: true %>
    </div>

    <div class="col-12">
      <%= f.input :tool_description, as: :text, label: t("tools.form.tool_description"), input_html: { rows: 5 } %>
    </div>

    <div class="col-12">
      <%= f.input :tool_url, label: t("tools.form.tool_url"), required: false %>
    </div>

    <div class="col-12">
      <%= f.input :author_note, as: :text, label: t("tools.form.author_note"), input_html: { rows: 3 } %>
    </div>

    <div class="col-12">
      <%= f.input :picture, as: :file, label: t("tools.form.picture"), 
          hint: t("tools.form.picture_hint"),
          input_html: { accept: "image/*" } %>
      <% if @tool.picture.attached? %>
        <div class="mt-2">
          <p class="text-muted small mb-2"><%= t("tools.form.current_picture") %>:</p>
          <%= image_tag @tool.picture, class: "rounded", style: "max-width: 64px; max-height: 64px; width: auto; height: auto; object-fit: contain;" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-4 d-flex gap-2">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to t("actions.cancel"), @tool.persisted? ? tool_path(@tool) : tools_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>

