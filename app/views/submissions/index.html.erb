<!-- Full-width layout with side banners -->
<div class="container-fluid px-0">
  <div class="row g-0">
    <!-- Left Ad Banner (columns 1-2) - extended inward toward main content -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-end position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>

    <!-- Main Content (columns 3-10) - adjusted for wider banners -->
    <div class="col-12 col-lg-8">
      <div class="container py-4">
<div class="p-2">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center align-items-start gap-3 mb-4">
    <h1 class="h3 m-0"><%= t("submissions.index.title") %></h1>

    <div class="d-flex align-items-center gap-2">
      <% if user_signed_in? %>
        <%= link_to t("submissions.index.new_submission"), new_submission_path, class: "btn btn-primary" %>
      <% end %>

      <!-- Sorting dropdown: allows users to choose how submissions are ordered on the index page -->
      <div class="d-flex align-items-center gap-2">
        <label for="submissions-sort-select" class="form-label m-0 small text-muted">
          <%= t("submissions.index.sort.label") %>
        </label>
        <%= form_with url: submissions_path, method: :get, local: true, html: { class: "d-inline-block" } do |f| %>
          <%# Preserve existing filters when changing sort %>
          <%= hidden_field_tag :type, @submission_type if @submission_type.present? %>
          <%= hidden_field_tag :status, @status if @status.present? %>
          <%= hidden_field_tag :tool_id, params[:tool_id] if params[:tool_id].present? %>
          <%= hidden_field_tag :query, @query if @query.present? %>
          <%= f.select :sort,
            options_for_select(
              [
                [t("submissions.index.sort.newest"), "newest"],
                [t("submissions.index.sort.alphabetical"), "alphabetical"],
                [t("submissions.index.sort.most_upvoted"), "most_upvoted"],
                [t("submissions.index.sort.trending"), "trending"],
                [t("submissions.index.sort.new_hot"), "new_hot"],
                [t("submissions.index.sort.most_followed"), "most_followed"]
              ],
              @sort
            ),
            { include_blank: false },
            {
              id: "submissions-sort-select",
              class: "form-select form-select-sm",
              onchange: "this.form.submit()"
            } %>
        <% end %>
      </div>
    </div>
  </div>
  
  <% if @submissions.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-3">
      <% @submissions.each do |submission| %>
        <div class="col">
          <%= render "submissions/submission_card", submission: submission %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info"><%= t("submissions.index.empty_state") %></div>
  <% end %>
</div>
      </div>
    </div>

    <!-- Right Ad Banner (columns 11-12) - extended inward toward main content -->
    <div class="col-lg-2 d-none d-lg-block side-banner ps-5 pe-5">
      <div class="card h-100 rounded-0 border-0 border-start position-relative overflow-hidden" style="border-radius: 0 !important; background-image: url('https://images.unsplash.com/photo-1550751827-4bd374c3f58b?w=300&h=800&fit=crop'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);"></div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3 position-relative z-1">
          <p class="fw-semibold mb-1 text-white">Sponsors</p>
          <p class="text-white-50 small mb-0"><%= t("pages.home.ads.supporting_text") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

