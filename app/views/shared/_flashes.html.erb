<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1" role="alert" data-controller="flash" data-flash-auto-dismiss-value="<%= flash_auto_dismiss_time %>">
    <span class="alert-message"><%= notice %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t("navigation.close") %>">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1" role="alert" data-controller="flash" data-flash-auto-dismiss-value="<%= flash_auto_dismiss_time %>">
    <span class="alert-message"><%= alert %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t("navigation.close") %>">
    </button>
  </div>
<% end %>
