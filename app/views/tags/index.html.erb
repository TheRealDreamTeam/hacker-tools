<!-- Full-width layout -->
<div class="container py-4">
  <div class="p-2">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><%= t("tags.index.title") %></h1>
    <% if admin_user? %>
      <%= link_to t("tags.actions.new"), new_tag_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  <% if @tags_by_type.any? %>
    <% @tags_by_type.each do |tag_type, tags| %>
      <% sample_tag = tags.first %>
      <% 
        # Get the hex color from the tag (helper now returns hex)
        header_bg_color = tag_type_color(sample_tag)
        
        # Determine text color based on background darkness
        text_color = if sample_tag.color.present?
          is_dark_color?(sample_tag.color) ? "#ffffff" : "#000000"
        else
          # For fallback colors from tag_type_slug, use white text for dark colors
          # Most fallback colors are dark, so default to white
          "#ffffff"
        end
      %>
      <div class="card mb-4">
        <div class="card-header" style="background-color: <%= header_bg_color %>; color: <%= text_color %>;">
          <h2 class="h5 mb-0"><%= tag_type %></h2>
        </div>
        <div class="card-body">
          <% root_tags = tags.select(&:root?) %>
          <% if root_tags.any? %>
            <ul class="list-unstyled mb-0">
              <% root_tags.each do |root_tag| %>
                <%= render "tags/tag_item", tag: root_tag, all_tags: tags %>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted mb-0"><%= t("tags.index.no_tags") %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-light border">
      <p class="mb-0"><%= t("tags.index.empty") %></p>
      <% if admin_user? %>
        <%= link_to t("tags.actions.new"), new_tag_path, class: "btn btn-primary mt-2" %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>