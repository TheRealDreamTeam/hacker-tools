<%# Notification index page %>
<div class="container py-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
        <h1 class="mb-0"><%= t("notifications.title") %></h1>
        <% if current_user.has_unread_notifications? %>
          <%= button_to mark_all_as_read_notifications_path,
              method: :patch,
              class: "btn btn-outline-primary",
              form: { data: { turbo_stream: true } } do %>
            <%= t("notifications.mark_all_as_read") %>
          <% end %>
        <% end %>
      </div>

      <!-- Information panel -->
      <div class="card shadow-sm mb-4" style="border-radius: 0.75rem;">
        <div class="card-body">
          <h5 class="card-title mb-2"><%= t("notifications.info.title") %></h5>
          <p class="card-text text-muted mb-0"><%= t("notifications.info.description") %></p>
        </div>
      </div>
      
      <%# Subscribe to real-time updates via Action Cable %>
      <%= turbo_stream_from "noticed::notification_channel", current_user %>
      
      <div id="notifications-list">
        <% if @notifications.any? %>
          <div class="list-group">
            <% @notifications.each do |notification| %>
              <%= render "notifications/notification_item", notification: notification %>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-light text-center">
            <%= t("notifications.empty") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

