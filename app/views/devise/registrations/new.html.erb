<div class="devise-container">
  <h2><%= t("devise.registrations.new.title") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%# Removed f.error_notification - using field-level errors (invalid-feedback) instead for better UX %>

    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" } %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: (@minimum_password_length ? t("devise.registrations.new.password_hint", count: @minimum_password_length) : nil),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.registrations.new.sign_up"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="devise-shared-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
