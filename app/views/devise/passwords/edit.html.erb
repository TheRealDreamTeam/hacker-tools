<h2><%= t("devise.passwords.edit.title") %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: t("forms.password"),
                required: true,
                autofocus: true,
                hint: (@minimum_password_length ? t("devise.registrations.new.password_hint", count: @minimum_password_length) : nil),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: t("forms.password_confirmation"),
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("devise.passwords.edit.change_password") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
