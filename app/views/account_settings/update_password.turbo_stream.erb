<% if @user.errors.any? %>
  <%= turbo_stream.replace "password-section" do %>
    <%= render partial: "account_settings/password_section", locals: { user: @user } %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "password-section" do %>
    <%= render partial: "account_settings/password_section", locals: { user: @user } %>
  <% end %>
  
  <%= turbo_stream.append "flash-messages" do %>
    <div class="alert alert-success alert-dismissible fade show" role="alert" data-controller="flash" data-flash-auto-dismiss-value="<%= flash_auto_dismiss_time %>">
      <span class="alert-message"><%= t("account_settings.password.updated") %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t("navigation.close") %>"></button>
    </div>
  <% end %>
<% end %>

