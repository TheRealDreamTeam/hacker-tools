<div class="account-section h-100" id="password-section">
  <h3 class="h5 mb-3"><%= t("account_settings.password.title") %></h3>
  <div class="card">
    <div class="card-body">
      <%= form_with model: user, url: update_password_account_settings_path, method: :patch, data: { turbo: true }, local: false do |f| %>
        <% if user.errors[:password].any? || user.errors[:password_confirmation].any? || user.errors[:current_password].any? %>
          <div class="alert alert-danger">
            <% (user.errors[:password] + user.errors[:password_confirmation] + user.errors[:current_password]).each do |error| %>
              <div><%= error %></div>
            <% end %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password, t("forms.password"), class: "form-label" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          <div class="form-text"><%= t("account_settings.password.hint") %></div>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, t("forms.password_confirmation"), class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="mb-3">
          <%= f.label :current_password, t("account_settings.password.current_password"), class: "form-label" %>
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", required: true %>
          <div class="form-text"><%= t("account_settings.password.current_password_hint") %></div>
        </div>

        <div class="form-actions">
          <%= f.submit t("account_settings.password.update"), class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

