<%= turbo_stream.replace "avatar-section" do %>
  <%= render partial: "account_settings/avatar_section", locals: { user: @user } %>
<% end %>

<% if flash[:notice] %>
  <%= turbo_stream.append "flash-messages" do %>
    <div class="alert alert-success alert-dismissible fade show" role="alert" data-controller="flash" data-flash-auto-dismiss-value="2000">
      <span><%= flash[:notice] %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t("navigation.close") %>"></button>
    </div>
  <% end %>
<% end %>

<% if flash[:alert] %>
  <%= turbo_stream.append "flash-messages" do %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" data-controller="flash" data-flash-auto-dismiss-value="2000">
      <span><%= flash[:alert] %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t("navigation.close") %>"></button>
    </div>
  <% end %>
<% end %>

