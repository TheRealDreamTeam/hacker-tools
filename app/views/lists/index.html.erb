<!-- Full-width layout -->
<div class="container py-4">
  <div class="p-2">
    <!-- Header section -->
    <div class="d-flex flex-row justify-content-between align-items-center gap-3 mb-4">
      <h1 class="h3 mb-0"><%= t("lists.index.title") %></h1>
      <%= link_to new_list_path, class: "btn btn-primary square-plus-btn" do %>
        <i class="bi bi-plus-lg"></i>
      <% end %>
    </div>

    <!-- Informational card about lists -->
    <% if @lists.empty? %>
      <div class="card shadow-sm mb-4" style="border-radius: 0.75rem;">
        <div class="card-body">
          <div class="d-flex align-items-start gap-3">
            <div class="flex-shrink-0">
              <i class="bi bi-info-circle fs-4 text-primary"></i>
            </div>
            <div class="flex-grow-1">
              <h5 class="card-title mb-2"><%= t("lists.index.info.title") %></h5>
              <p class="card-text text-muted mb-2"><%= t("lists.index.info.description") %></p>
              <ul class="list-unstyled mb-0 small text-muted">
                <li class="mb-1">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  <%= t("lists.index.info.step_1") %>
                </li>
                <li class="mb-1">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  <%= t("lists.index.info.step_2") %>
                </li>
                <li class="mb-0">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  <%= t("lists.index.info.step_3") %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Lists grid -->
    <% if @lists.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @lists.each do |list| %>
          <div class="col">
            <div class="card h-100 shadow-sm card-hover" style="border-radius: 0.75rem;">
              <div class="card-body d-flex flex-column">
                <div class="flex-grow-1 mb-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <%= link_to list.list_name, list_path(list), class: "text-decoration-none" %>
                    </h5>
                    <span class="badge <%= list.visibility_private? ? 'bg-secondary' : 'bg-primary' %>">
                      <%= list.visibility_private? ? t("lists.index.private") : t("lists.index.public") %>
                    </span>
                  </div>
                  <p class="text-muted small mb-0">
                    <%= t("lists.index.item_count", count: list.tools.count + list.submissions.count) %>
                  </p>
                </div>
                
                <div class="d-flex gap-2 pt-3 border-top">
                  <%= link_to t("actions.edit"), edit_list_path(list), class: "btn btn-sm btn-outline-secondary flex-fill" %>
                  <%= link_to t("actions.delete"), list_path(list), 
                      data: { turbo_method: :delete, turbo_confirm: t("lists.index.confirm_delete") }, 
                      class: "btn btn-sm btn-outline-danger flex-fill" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info mb-0" role="status">
        <i class="bi bi-info-circle me-2"></i>
        <%= t("lists.index.empty_state") %>
      </div>
    <% end %>
  </div>
</div>
